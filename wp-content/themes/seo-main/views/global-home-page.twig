{% block content %}
  {# <div class="container"> #}
  <main id="content" class="program-landing-page">
    <div class="page-content">

      {% set component = post.get_field('hero') %}
      {% include ['components/component_gh_hero.twig'] %}

      {% set component = post.get_field('intro') %}
      {% include ['components/component_gh_intro.twig'] %}

      {% set component = post.get_field('program_list') %}
