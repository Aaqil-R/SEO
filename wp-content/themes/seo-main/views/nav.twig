<div class="c-nav">
  <div class="c-nav--top">
    <div class="c-nav__logo">
      {% if logo[0] %}
        <a href="{{site.url}}" class="c-logo__link">
          <img src="{{logo[0]}}" class="">
        </a>
      {% else %}
        <h1 class="c-logo__text">
          <a href="{{site.url}}" class="c-logo__link">{{site.title}}</a>
        </h1>
      {% endif %}
    </div>
    <div class="c-nav__elements">
      <div class="c-nav__multisite-nav">
        {# Setting up the SITE MENU  #}
        <ul>
          {% for item in site_menu.get_items %}
            {% set has_children = item.get_children %}
            <li>
              <a href="{{item.get_link}}" class="nav-title">{{item.title}}</a>
              {% if has_children %}
                <ul class="nav-dropdown">
                {% for child in item.get_children %}
                  <li><a href="{{child.get_link}}">{{child.title}}</a></li>
                {% endfor %}
                </ul>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      </div>
      <div class="c-nav__elements-widget">
        {{header_widget}}  
      </div>
    </div>
  </div>
  <div class="c-nav--bottom">
    <div class="c-nav__nav--left">
      <ul>
        {% for main_menu_item in main_menu_left.get_items %}
          <li>
            <a href="{{main_menu_item.get_link}}">{{main_menu_item.title}}</a>            
          </li>
        {% endfor %}
      </ul>
    </div>
    <div class="c-nav__nav--right">
      <ul>
        {% for main_menu_right_item in main_menu_right.get_items %}
          <li>
            <a href="{{main_menu_right_item.get_link}}">{{main_menu_right_item.title}}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>