<div class="c-mainnav">
  <div class="c-mainnav__content">
    {{ function('dynamic_sidebar', 'header-widget') }}
  </div>
</div>
<aside class="c-nav" id="c-nav" data-off-canvas data-position="right">
  <div class="c-logo__container">
    {% if logo[0] %}
      <a href="{{site.url}}" class="c-logo__link"><img src="{{logo[0]}}" class="c-logo__image"></a>
    {% else %}
      <h1 class="c-logo__text"><a href="{{site.url}}" class="c-logo__link">{{site.title}}</a></h1>
    {% endif %}
  </div>
  <div class="c-menu__container">
    <ul class="c-menu__list" data-responsive-menu="drilldown large-dropdown">
    {% for item in menu.get_items %}
      <li class="c-menu__list-item">
        <a href="{{item.get_link}}">{{item.title}}</a>
        {% if item.get_children %}
        <ul class="c-menu__sublist">
          <li class="back"><a href="#">Back</a></li>
          {% for child in item.get_children %}
            <li class="c-menu__sublist-item"><a href="{{child.get_link}}">{{child.title}}</a></li>
          {% endfor %}
        </ul> <!-- /.menu.nested -->
        {% endif %}
      </li>
    {% endfor %}
    </ul> <!-- /.menu -->
  </div>
</aside> <!-- /.off-canvas -->