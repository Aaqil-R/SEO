{% if component.image_type == 'image_only' %}
	{# When the full width is selected #}
	<div class="container hero_image">
		<img src="{{component.image_full_width.url}}" />
	</div>

{% else %}

{# When Image with text is selected #}
	<div class="container hero_image">
		<img src="{{component.image.url}}" />
		{{component.text}}
	</div>

{{component.title}}
{{component.excerpt}}

{% endif %}