{% for repeater in component.repeater %}
	{% if repeater.stat_type == 'percentage' %}
		<img src="{{Image(repeater.image).src }}" />
		{{repeater.percent}}
		{{repeater.text}}
	{% elseif repeater.stat_type == 'years' %}
		{{repeater.number}}
		{{repeater.text}}
		{{repeater.year_1}}
		{{repeater.year_2}}
	{% endif %}
{% endfor %}