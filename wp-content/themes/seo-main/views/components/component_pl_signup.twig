<section class="c-ph-signup">
  <div class="container">
    <div class="c-ph-signup__container">
      <h2 class="c-ph-signup__title">{{component.header_text}}</h2>
      <div class="c-ph-signup__form">
        <form action="" id="signup_form">
          <input type="email" name="email" class="c-ph-signup__input" placeholder="name@email.com">
          <input type="text" name="zipcode" class="c-ph-signup__input" placeholder="zipcode">
        </form>
        <div class="c-ph-signup__form-button">
          <button class="c-uie__calltoaction-secondary" type="submit" form="signup_form" value="Sign Up">Call to Action</button>
        </div>
      </div>
    </div>
  </div>
</section>
