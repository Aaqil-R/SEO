<section>
  <div class="container hero-section">
    {% if component.header_type == 'image' %}
      {% if component.destination_link %}
        <a href="{{component.destination_link}}">
      {% endif %}
          <div class="c-hero_image {% if component.hero_text is not empty %} got_title{% endif %}" style="background-image: url('{{Image(component.image).src }}')">
            <p>{{component.hero_text}}</p>
          </div>
      {% if component.destination_link %}
        </a>
      {% endif %}
    {% elseif component.header_type == 'video' %}
      <div class="c-hero_video {% if component.hero_text is not empty %} got_title{% endif %}">
        <div class="video">
          <div class="fullwidth__video" video-url="{{component.video}}"></div>
          <div id="play-button" class="c-hero_playbutton"></div>
        </div>
        <p>{{component.hero_text}}</p>
      </div>
    {% endif %}  
  </div>
</section>