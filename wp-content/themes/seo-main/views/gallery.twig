{% extends "base.twig" %}

{% block content %}
  {# <div class="container"> #}
  <main id="content" class="gallery-page">
    <div class="page-content">
      {# Amalan new codes #}
      <div class="container region_hero">
        <div class="page-title">
          <h1>{{post.title}}</h1>
        </div>
        {% for component in post.get_field('flexi_content') %}
          {% include ['components/'~component.acf_fc_layout~'.twig' , 'components/components.twig'] ignore missing with {"component": component} %}
        {% endfor %}
      </div>
      {% block article_footer %}
      {% endblock %}
    </div> <!-- /.page-content.small-12.large-8.columns -->

    {% block sidebar %}
      <aside class="page-sidebar">
        {{sidebar}}
      </aside> <!-- /.page-sidebar -->
    {% endblock %}
  </main> <!-- /#content -->
  {# </div> #}
{% endblock %}